                                        FontSize="12"
                                        LineBreakMode="WordWrap"
                                        Text="{Binding SelectedAgeGroup.AgeRange}"
                                        TextColor="{StaticResource Primary}" />
                                    <Label
                                        FontSize="10"
                                        LineBreakMode="WordWrap"
                                        Text="{Binding SelectedAgeGroup.Description}"
