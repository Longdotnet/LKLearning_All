                                Stroke="{StaticResource Gray300}"
                                StrokeShape="RoundRectangle 8">
                                <VerticalStackLayout Spacing="4">
                                    <Label
                                        FontSize="20"
                                        HorizontalTextAlignment="Center"
                                        Text="ðŸ“š" />
                                    <Label
