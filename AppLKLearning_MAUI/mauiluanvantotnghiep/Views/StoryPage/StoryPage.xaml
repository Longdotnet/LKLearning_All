                                        <Grid ColumnDefinitions="Auto,*" RowSpacing="4">
                                            <Border
                                                Grid.Column="0"
                                                BackgroundColor="{Binding Color}"
                                                HeightRequest="35"
                                                HorizontalOptions="Start"
                                                StrokeShape="RoundRectangle 17"
                                                VerticalOptions="Start"
                                                WidthRequest="35">
                                                <Label
