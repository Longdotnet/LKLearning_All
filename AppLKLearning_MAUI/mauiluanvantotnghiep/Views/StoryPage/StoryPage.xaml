                            <Border
                                Grid.Column="2"
                                Padding="8,4"
                                BackgroundColor="{StaticResource Secondary}"
                                HorizontalOptions="End"
                                Stroke="{StaticResource Primary}"
                                StrokeShape="RoundRectangle 12">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    Text="ðŸŒ Song ngá»¯"
