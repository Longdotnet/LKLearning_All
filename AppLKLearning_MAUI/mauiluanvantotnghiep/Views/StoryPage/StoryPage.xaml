                                </VerticalStackLayout>
                            </Border>

                            <Border
                                Grid.Column="1"
                                Padding="8"
                                BackgroundColor="{StaticResource White}"
                                Stroke="{StaticResource Gray300}"
                                StrokeShape="RoundRectangle 8">
                                <VerticalStackLayout Spacing="4">
                                    <Label
                                        FontSize="20"
                                        HorizontalTextAlignment="Center"
                                        Text="ðŸŽ§" />
                                    <Label
