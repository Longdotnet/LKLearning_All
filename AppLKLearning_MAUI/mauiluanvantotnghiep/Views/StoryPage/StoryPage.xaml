                            FontAttributes="Bold"
                            FontSize="14"
                            HeightRequest="40"
                            HorizontalOptions="Center"
                            IsEnabled="{Binding IsNotBusy}"
                            Text="ðŸ”„ Táº£i láº¡i Audio"
